        <targets>
            <target android:targetId="@id/Layout_DialogWindow"/>
        </targets>
    </slide>
    <fade android:duration="500" android:fadingMode="fade_out" >
        <targets>
            <target android:targetId="@id/Layout_DialogWindow" />
        </targets>
    </fade>
</transitionSet>