<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/CardView_ItemRootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="10dp"
    android:layout_marginEnd="10dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:transitionName="@string/SharedElementName_DeviceItem"
    card_view:cardCornerRadius="0dp"
    card_view:cardElevation="0dp">

        <TextView
            android:id="@+id/TextView_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@+id/ImageButton_More"
            android:layout_toEndOf="@+id/ImageView_Icon"
            android:layout_margin="15dp"
            android:text="CoSmart Device"
            android:textColor="@color/DiscoverDeviceActivity_Item_TitleTextColor"
            android:textSize="@dimen/DiscoverDeviceActivity_ItemTitleSize"
            android:background="#3300FF00"/>

</android.support.v7.widget.CardView>